// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int           @id @default(autoincrement())
  username      String
  email         String
  password      String
  role          String
  referral      String?
  referred      String?
  points        Int  @default(0)
  pointsExpired DateTime?
  reward        Boolean       @default(false)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  Event         Event[]
  Transaction   Transaction[]

  Review      Review[]
  UserVoucher UserVoucher[]
  Voucher     Voucher[]

  Coupon      Coupon[]
  UserCoupon  UserCoupon[]


  @@map("users")
}

model Event {
  id          Int    @id @default(autoincrement())
  title       String @unique
  description String @db.LongText()

  booked Int @default(0)

  category String
  content  String @db.LongText()
  venue    String @default("")
  city     String @default("")

  price Int


  ticketLimit Int           @default(0)
  user        User          @relation(fields: [userId], references: [id])
  userId      Int
  thumbnail   String
  startDate   DateTime      @db.DateTime()
  endDate     DateTime      @db.DateTime()
  deletedAt   DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  Transaction Transaction[]

  Review  Review[]
  Voucher Voucher[]

  @@map("events")
}

model Transaction {
  id           Int               @id @default(autoincrement())
  quantity     Int
  totalPrice   Int
  expiresAt    DateTime
  userId       Int
  status       TransactionStatus @default(PENDING)
  user         User              @relation(fields: [userId], references: [id])
  eventId      Int
  event        Event             @relation(fields: [eventId], references: [id])
  createdAt    DateTime          @default(now())
  updateAt     DateTime          @updatedAt
  paymentProof String @default("")
  invoice String
  isUseVoucher Boolean
  isPointUse   Boolean
  isUseCoupon  Boolean

  userCoupon    UserCoupon?  @relation(fields: [userCouponId], references: [id])
  userVoucher   UserVoucher? @relation(fields: [userVoucherId], references: [id])
  userVoucherId Int?
  userCouponId  Int?
  
  @@map("transactions")
}


enum TransactionStatus {
  PENDING
  COMPLETE
  WAITING
  CANCELED
  EXPIRED
}


model Review {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  event     Event    @relation(fields: [eventId], references: [id])
  userId    Int
  eventId   Int
  rating    Int?
  comment   String
  createdAt DateTime @default(now())

  @@map("reviews")
}

model UserVoucher {
  id          Int           @id @default(autoincrement())
  userId      Int
  user        User          @relation(fields: [userId], references: [id])

  isUse       Boolean

  Transaction Transaction[]
  voucher     Voucher       @relation(fields: [voucherId], references: [id])
  voucherId   Int

  @@map("userVouchers")
}

model Voucher {
  id          Int      @id @default(autoincrement())
  name        String
  amount      Int
  limit       Int
  expiredDate DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User          @relation(fields: [userId], references: [id])
  event       Event         @relation(fields: [eventId], references: [id])
  userId      Int
  eventId     Int
  UserVoucher UserVoucher[]


  @@map("vouchers")
}

model UserCoupon {
  id       Int     @id @default(autoincrement())
  couponId Int
  isUse    Boolean

  user        User          @relation(fields: [userId], references: [id])
  coupon      Coupon        @relation(fields: [couponId], references: [id])
  userId      Int
  Transaction Transaction[]

  @@map("userCoupons")
}

model Coupon {
  id          Int          @id @default(autoincrement())
  code        String       @unique
  expiredDate DateTime
  amount      Int
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  user        User         @relation(fields: [userId], references: [id])
  userId      Int
  isUse       Boolean
  UserCoupon  UserCoupon[]

  @@map("coupons")

}
